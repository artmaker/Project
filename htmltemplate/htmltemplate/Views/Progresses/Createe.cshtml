@model  IEnumerable<htmltemplate.Models.Progress>

@{

    ViewBag.Title = "Createe";
}

<h2>Create</h2>
<head>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <meta charset="utf-8" />
</head>
<body>
    <div class="container">
        @{

            //List<string> list = new List<string>();
            List<SelectListItem> lst = new List<SelectListItem>();
            foreach (var item in Model)
            {
                lst.Add(new SelectListItem
                {
                    Text = item.IdeaId,
                    Value = item.IdeaId
                });

                //list.Add(item.IdeaId);

            }

        }

        @using (Html.BeginForm("Createe", "Progresses", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {



            <h4>Progress</h4>





            <div class="form-group">
                <label class = "control-label col-md-2">Requirments Specification</label>
                <input type="text" name="Bar1" height="700" rows="10" cols="30" class = "form-control" required>
                <br />
                <br />
                <label class = "control-label col-md-2">Design An Front End</label>
                <input type="text" name="Bar2" height="700" rows="10" cols="30" class = "form-control" required>
                <br />
                <br />
                <label class = "control-label col-md-2">Implementation</label>
                <input type="text" name="Bar3" height="700" rows="10" cols="30" class = "form-control" required>
                <br />
                <br />
                <label class = "control-label col-md-2">Documentation</label>
                <input type="text" name="Bar4" height="700" rows="10" cols="30" class = "form-control" required>
                <br />
                <br />
                <label class = "control-label col-md-2">SelectIdea</label>

                @Html.DropDownList("ideaid", lst,new { @class = "form-control" })

                <br />
                <br />
                <div class="input-group">


                    <input type="submit" value="Createe" />


                </div>

            </div>

        }










        <div>
            @Html.ActionLink("Back to List", "TeachersIndex")

        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
        </div>
</body>